<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.ur91k.clichat</groupId>
  <artifactId>clichat</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>${maven.compiler.source}</source>
          <target>${maven.compiler.target}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <id>server-jar</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.ur91k.clichat.ChatServer</mainClass>
                </transformer>
              </transformers>
              <finalName>server</finalName>
            </configuration>
          </execution>
          <execution>
            <id>client-jar</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.ur91k.clichat.ChatClient</mainClass>
                </transformer>
              </transformers>
              <finalName>client</finalName>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.akathist.maven.plugins.launch4j</groupId>
        <artifactId>launch4j-maven-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <id>server-exe</id>
            <phase>package</phase>
            <goals>
              <goal>launch4j</goal>
            </goals>
            <configuration>
              <headerType>console</headerType>
              <outfile>target/server.exe</outfile>
              <jar>target/server.jar</jar>
              <errTitle>Chat Server Error</errTitle>
              <classPath>
                <mainClass>com.ur91k.clichat.ChatServer</mainClass>
              </classPath>
              <jre>
                <minVersion>17</minVersion>
                <path>%JAVA_HOME%;%PATH%</path>
              </jre>
              <versionInfo>
                <fileVersion>1.0.0.0</fileVersion>
                <txtFileVersion>1.0.0.0</txtFileVersion>
                <fileDescription>Chat Server Application</fileDescription>
                <copyright>Your Copyright</copyright>
                <productVersion>1.0.0.0</productVersion>
                <txtProductVersion>1.0.0.0</txtProductVersion>
                <productName>Chat Server</productName>
                <internalName>server</internalName>
                <originalFilename>server.exe</originalFilename>
              </versionInfo>
            </configuration>
          </execution>
          <execution>
            <id>client-exe</id>
            <phase>package</phase>
            <goals>
              <goal>launch4j</goal>
            </goals>
            <configuration>
              <headerType>console</headerType>
              <outfile>target/client.exe</outfile>
              <jar>target/client.jar</jar>
              <errTitle>Chat Client Error</errTitle>
              <classPath>
                <mainClass>com.ur91k.clichat.ChatClient</mainClass>
              </classPath>
              <jre>
                <minVersion>17</minVersion>
                <path>%JAVA_HOME%;%PATH%</path>
              </jre>
              <versionInfo>
                <fileVersion>1.0.0.0</fileVersion>
                <txtFileVersion>1.0.0.0</txtFileVersion>
                <fileDescription>Chat Client Application</fileDescription>
                <copyright>Your Copyright</copyright>
                <productVersion>1.0.0.0</productVersion>
                <txtProductVersion>1.0.0.0</txtProductVersion>
                <productName>Chat Client</productName>
                <internalName>client</internalName>
                <originalFilename>client.exe</originalFilename>
              </versionInfo>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>17</maven.compiler.target>
    <maven.compiler.source>17</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
